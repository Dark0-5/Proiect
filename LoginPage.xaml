<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RestaurantSystem.Mobile.LoginPage"
             Title="Login">

    <VerticalStackLayout Padding="20" Spacing="12">
        <Label Text="RestaurantSystem - Client Login" FontSize="18" />

        <Entry x:Name="EmailEntry" Placeholder="Email" Keyboard="Email" />
        <Entry x:Name="PasswordEntry" Placeholder="Parola" IsPassword="True" />

        <Button Text="Login" Clicked="OnLoginClicked" />

        <Label x:Name="MessageLabel" TextColor="Red" />
    </VerticalStackLayout>
</ContentPage>
